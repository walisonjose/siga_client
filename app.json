{
  "expo": {
    "name": "Siga Client",
    "slug": "ubersiga",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/siga_icon.png",
    "splash": {
      "image": "./assets/apa.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "android": {
      "googleServicesFile": "./google-services.json",
      "package": "siga.cliente",
      "versionCode": 1,
      "softwareKeyboardLayoutMode": "pan",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "ACCESS_COARSE_LOCATION" 
      ]


    },
    
    "ios": {
      "bundleIdentifier": "siga.cliente",
      "supportsTablet": true,
      "infoPlist": {
        "UIBackgroundModes": [
          "location",
          "fetch"
        ],
        "NSLocationAlwaysUsageDescription": "Localizacao necessaria para rastreio das bolsas de sangue",
        "NSLocationWhenInUseUsageDescription": "Localizacao necessaria para rastreio das bolsas de sangue",
        "UNUserNotificationCenter": "Notificações de atividades da conta"
      }
    }
  }
}
